%div{ style:'display: flex; flex-direction: column; align-items: left'}
 %span
  / %i{ class: 'icon icon-battery-alert', style:'color: red;' }
  = "Pause à : " + crumb.metadata["start_date"].to_time.strftime("%H:%M:%S")
 %span
  / %i{ class: 'icon icon-portable-wifi-off', style:'color: blue;' }
  = "Durée : " + Time.at(crumb.metadata["duration"]).utc.strftime("%H:%M:%S")
